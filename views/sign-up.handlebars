<div class="background-img"></div>
<main>
    <div class="container sing-up-container">
        <!-- Create new User form -->
        <div class="row">
            <form class="col s12 sign-up-wrapper">
                <h1>Create Account</h1>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                    <div class="input-field col s12">
                            <input id="userName" type="text" class="validate">
                            <label for="userName">Create Username</label>
                        </div>
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <a type="submit" id="newUserSubmit" class="waves-effect waves-light btn">Submit</a>
            </form>
        </div>
    </div>
</main>
<!-- Modal Structure -->
<div id="createProfileModal" class="modal">
    <div class="modal-content">
        <div class="container">
            <!-- Create new User form -->
            <div class="row">
                <form class="col s12 create-profile-form">
                    <h1>Tell us about you!</h1>
                    <div class="row">
                        <div class="input-field col s6">
                            <input placeholder="david" id="first_name" type="text" class="validate">
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input placeholder="foster" id="last_name" type="text" class="validate">
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="address" type="text" class="validate">
                            <label for="address">Home address</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="description" class="materialize-textarea"></textarea>
                            <label for="description">Mini Intro: Your interest, hobbies, & passions.</label>
                        </div>
                    </div>
                    <a type="submit" id="newProfileSubmit" class="waves-effect waves-light btn">All Done</a>
                </form>
            </div>
        </div>
    </div>
</div>